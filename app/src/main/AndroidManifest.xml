<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.erhs.stem.project.time_management">

    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_icon"
        android:supportsRtl="true"
        android:theme="@style/AppThemeDay">
        <activity
            android:name=".activity.LandingActivity"
            android:theme="@style/AppThemeDay.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MainActivity"
            android:theme="@style/AppThemeDay.NoActionBar" />
        <activity android:name=".activity.StatisticsChartActivity" />
        <activity android:name=".activity.SettingsActivity" />
        <activity android:name=".activity.AboutActivity" />
        <activity
            android:name=".activity.EventEditingActivity"
            android:theme="@style/AppThemeDay.NoActionBar" />
        <activity
            android:name=".activity.AlarmActivity"
            android:theme="@style/AppThemeDay.NoActionBar" />

        <receiver android:name=".service.Receiver" />
    </application>

</manifest>