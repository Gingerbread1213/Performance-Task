<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold|italic"
            android:text="@string/welcome" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/action_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_launch_black_24dp"
                android:text="@string/action_start"
                android:drawableStart="@drawable/ic_launch_black_24dp" />

            <Button
                android:id="@+id/action_statistics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_timeline_black_24dp"
                android:drawablePadding="8dp"
                android:text="@string/action_statistics"
                android:drawableStart="@drawable/ic_timeline_black_24dp" />

            <Button
                android:id="@+id/action_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/ic_face_black_24dp"
                android:text="@string/action_about"
                android:drawableStart="@drawable/ic_face_black_24dp" />
        </LinearLayout>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
