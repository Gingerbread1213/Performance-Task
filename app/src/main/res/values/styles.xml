<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppThemeAlt" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#545454</item>
        <item name="colorAccent">#ffd500</item>
        <item name="android:windowBackground">#545451</item>

    </style>

    <style name="AppThemeFresh" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#008214</item>
        <item name="colorPrimaryDark">#008214</item>
        <item name="colorAccent">#00945e</item>
        <item name="android:windowBackground">#aafc83</item>


    </style>
    <style name="AppThemeSky" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#7b55fa</item>
        <item name="colorPrimaryDark">#5cb0ff</item>
        <item name="colorAccent">#5cb0ff</item>
        <item name="android:windowBackground">#5cb0ff</item>

    </style>
    <style name="AppThemeWarm" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#29286b</item>
        <item name="colorPrimaryDark">#29286b</item>
        <item name="colorAccent">#fffb7d</item>
        <item name="android:windowBackground">#9aedea</item>

    </style>

</resources>
